<ui:FluentWindow x:Class="VoidstrapMVP.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 mc:Ignorable="d"
                 Title="Voidstrap MVP" 
                 Height="600" 
                 Width="900"
                 WindowStartupLocation="CenterScreen"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" 
                     Title="Voidstrap MVP"
                     Icon="pack://application:,,,/Resources/Icon.ico" />

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="ðŸŒŒ Voidstrap MVP" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10" />
                <TextBlock Text="A minimal WPF application with modern UI framework" 
                           FontSize="14" 
                           Opacity="0.8" />
            </StackPanel>

            <!-- Feature Cards -->
            <ui:CardControl Grid.Row="1" Margin="0,0,0,20">
                <StackPanel Margin="20">
                    <TextBlock Text="âœ¨ Features" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15" />
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <ui:SymbolIcon Symbol="Checkmark24" Margin="0,0,10,0" />
                        <TextBlock Text="Modern WPF UI with WPF-UI library" VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <ui:SymbolIcon Symbol="Checkmark24" Margin="0,0,10,0" />
                        <TextBlock Text="Dark theme support with Mica backdrop" VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <ui:SymbolIcon Symbol="Checkmark24" Margin="0,0,10,0" />
                        <TextBlock Text="MVVM architecture with CommunityToolkit" VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <ui:SymbolIcon Symbol="Checkmark24" Margin="0,0,10,0" />
                        <TextBlock Text=".NET 8.0 Windows target framework" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </ui:CardControl>

            <!-- Interactive Section -->
            <ui:CardControl Grid.Row="2">
                <StackPanel Margin="20" VerticalAlignment="Center">
                    <TextBlock Text="ðŸŽ¨ Theme Controls" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,20" />
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <ui:Button Content="Dark Theme" 
                                   Icon="WeatherMoon24"
                                   Appearance="Primary"
                                   Margin="5"
                                   Click="SetDarkTheme" />
                        <ui:Button Content="Light Theme" 
                                   Icon="WeatherSunny24"
                                   Appearance="Secondary"
                                   Margin="5"
                                   Click="SetLightTheme" />
                    </StackPanel>

                    <TextBlock x:Name="StatusText"
                               Text="Ready" 
                               FontSize="14" 
                               Opacity="0.7"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0" />
                </StackPanel>
            </ui:CardControl>

            <!-- Footer -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <TextBlock Text="Based on " Opacity="0.6" />
                <TextBlock Text="voidstrap/Voidstrap" 
                           FontWeight="SemiBold" 
                           Margin="5,0" />
                <TextBlock Text="| Version 1.0.0" Opacity="0.6" />
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>